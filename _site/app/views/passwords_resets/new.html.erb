<h1>Esqueceu a sua senha?</h1>
<%= form_with url: password_reset_path do |form|%>
<div class="mb-3">
	<%=form.label :email %>
	<%=form.text_field :email, class: "form-control", placeholder: "andrii@nudeseutom.com.br", required:"true" %>	
</div>

<div class="mb-3">
	<%=form.submit "Resetar a senha", class: "btn btn-lg btn-primary"%>	
</div>
<% end %>