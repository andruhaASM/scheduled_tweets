<div class="mt-3 mb-3 card  card-body">
<%= tweet.body %>
<% if tweet.published? %>
<%= link_to "Ver o tweet", "https://twitter.com/#{tweet.twitter_account.username }/status/#{tweet.tweet_id}", target: :_blank %>
<% else %>
Agendado para: <%= tweet.publish_at %>
<%= link_to "Editar tweet", edit_tweet_path(tweet) %>
<% end %>
		
</div>

